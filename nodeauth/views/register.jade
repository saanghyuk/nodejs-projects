extends layout

block content
    h1.page-header #{title}
    p
        h4 Please register using the form below
    form(method='post', action='/users/register', enctype='multipart/form-data')
        .form-group
            label Name
            input.form-control(name='name', type='text', placeholder='Enter name')
        .form-group
            label Email
            input.form-control(name='email', type='email', placeholder='Enter Email')
        .form-group
            label Username
            input.form-control(name='username', type='text', placeholder='Enter Username')
        .form-group
            label Password
            input.form-control(name='password', type='text', placeholder='Enter Password')
        .form-group
            label Confirm Password
            input.form-control(name='password2', type='text', placeholder='Confirm Password')

        .form-group
            label Profile Image
            input.form-control(name='profileimage', type='file')

        input.btn.btn-primary(type='submit', name='submit', value='Register')